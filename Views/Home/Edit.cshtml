@model JobEditViewModel

@{
    ViewBag.Title = "Edit Job";
}

<div class="form-group row col-sm-12 mt-2">
    <div class="alert alert-info small text-center mr-5" style="width:250px">
        <strong>Status: @Model.JobStatus</strong>
    </div>

    <div class="alert alert-warning small text-center ml-5" style="width:250px">
        <strong>Next Step: @Model.NextStep</strong>
    </div>

</div>

<form asp-controller="Home" asp-action="Edit" asp-route-Id="@Model.Id" method="post" class="mt-3">

    <input hidden asp-for="EncryptedId" />
    <input hidden asp-for="JobStatus" />

    <div class="form-group row">
        <label asp-for="Company" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Company" class="form-control" placeholder="Company" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>

        <label asp-for="JobPosition" class="col-sm-1 col-form-label">Position</label>
        <div class="col-sm-3">
            <input asp-for="JobPosition" class="form-control" placeholder="Job Position" />
        </div>

        <label asp-for="AnnualRate" class="col-sm-1 col-form-label">Income</label>
        <div class="col-sm-2">
            <input asp-for="AnnualRate" class="form-control" placeholder="Annual Rate" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ContactEmail" class="col-sm-1 col-form-label">Email</label>
        <div class="col-sm-4">
            <input asp-for="ContactEmail" class="form-control" placeholder="Contact email" />
            <span asp-validation-for="ContactEmail" class="text-danger"></span>
        </div>

        <label asp-for="ContactPhone" class="col-sm-1 col-form-label">Phone</label>
        <div class="col-sm-3">
            <input asp-for="ContactPhone" class="form-control" placeholder="Contact number" />
            <span asp-validation-for="ContactPhone" class="text-danger"></span>
        </div>

        <label asp-for="CommuteCost" class="col-sm-1 col-form-label">Commute</label>
        <div class="col-sm-2">
            <input asp-for="CommuteCost" class="form-control" placeholder="Commute Cost" />
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="JobLink" class="col-sm-1 col-form-label">Link</label>
        <div class="col-sm-7">
            <input asp-for="JobLink" class="form-control" placeholder="Job Link" />
        </div>

        <label asp-for="AppliedDate" class="col-sm-1 col-form-label">Applied</label>
        <div class="col-sm-3">
            <input asp-for="AppliedDate" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Location" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Location" class="form-control" placeholder="Company Location or Address" />
        </div>

        <label asp-for="Expectation" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-2">
            <select asp-for="Expectation" asp-items="Html.GetEnumSelectList<Expectation>()"
                    class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Expectation" class="text-danger"></span>
        </div>

        <label asp-for="InterviewDate" class="col-sm-1 col-form-label">Interview</label>
        <div class="col-sm-3">
            <input asp-for="InterviewDate" class="form-control" />
        </div>

    </div>

    <hr />
    <div class="row m-1 justify-content-around">
        <div class="form-check m-1">
            <input asp-for="@Model.Applied" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model.Applied">Applied</label>
        </div>
        <div class="form-check m-1">
            <input asp-for="@Model.Researched" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model.Researched">Researched</label>
        </div>
        <div class="form-check m-1">
            <input asp-for="@Model.FollowUpSent" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model.FollowUpSent">Sent Follow Up Email</label>
        </div>
        <div class="form-check m-1">
            <input asp-for="@Model.Interviewed" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model.Interviewed">Interviewed</label>
        </div>
        <div class="form-check m-1">
            <input asp-for="@Model.FollowUp2Sent" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model.FollowUp2Sent">Sent Follow Up Email</label>
        </div>
        <div class="form-check m-1">
            <input asp-for="@Model.Finished" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model.Finished">Finished</label>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <hr />
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary btn-sm m-1">Update</button>
            <a asp-controller="Home" asp-action="Details" asp-route-Id="@Model.EncryptedId" class="btn btn-danger btn-sm m-1">Cancel</a>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                //select the class(custom file) -- bind to change event
                $('.custom-file-input').on("change", function () { // on change execute this function
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }

</form>
