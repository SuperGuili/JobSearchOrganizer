@model HomeDetailsViewModel

@{
    ViewBag.Title = "Job details";
    //var photoPath = "~/files/" + (Model.Job.FilePath ?? "microsoft.jpg");
}

<div class="form-group row col-sm-12 mt-2">
    <div class="alert alert-info small text-center mr-5" style="width:250px">
        <strong>Status: @Model.Job.JobStatus</strong>
    </div>

    <div class="alert alert-warning small text-center ml-5" style="width:250px">
        <strong>Next Step: @Model.Job.NextStep</strong>
    </div>

</div>

<div class="form-group row">
    <label asp-for="Job.Company" class="col-sm-1 col-form-label"></label>
    <div class="col-sm-4">
        <input asp-for="Job.Company" disabled class="form-control" placeholder="Company" />
        <span asp-validation-for="Job.Company" class="text-danger"></span>
    </div>

    <label asp-for="Job.JobPosition" class="col-sm-1 col-form-label">Position</label>
    <div class="col-sm-3">
        <input asp-for="Job.JobPosition" disabled class="form-control" placeholder="Job Position" />
    </div>

    <label asp-for="Job.AnnualRate" class="col-sm-1 col-form-label">Income</label>
    <div class="col-sm-2">
        <input asp-for="Job.AnnualRate" disabled class="form-control" placeholder="Annual Rate" />
    </div>
</div>

<div class="form-group row">
    <label asp-for="Job.ContactEmail" class="col-sm-1 col-form-label">Email</label>
    <div class="col-sm-4">
        <input asp-for="Job.ContactEmail" disabled class="form-control" placeholder="Contact email" />
        <span asp-validation-for="Job.ContactEmail" class="text-danger"></span>
    </div>

    <label asp-for="Job.ContactPhone" class="col-sm-1 col-form-label">Phone</label>
    <div class="col-sm-3">
        <input asp-for="Job.ContactPhone" disabled class="form-control" placeholder="Contact number" />
        <span asp-validation-for="Job.ContactPhone" class="text-danger"></span>
    </div>

    <label asp-for="Job.CommuteCost" class="col-sm-1 col-form-label">Commute</label>
    <div class="col-sm-2">
        <input asp-for="Job.CommuteCost" disabled class="form-control" placeholder="Commute Cost" />
    </div>

</div>

<div class="form-group row">
    <label asp-for="Job.JobLink" class="col-sm-1 col-form-label">Link</label>
    <div class="col-sm-7">
        <input asp-for="Job.JobLink" disabled class="form-control" placeholder="Job Link" />
    </div>

    <label asp-for="Job.AppliedDate" class="col-sm-1 col-form-label">Applied</label>
    <div class="col-sm-3">
        <input asp-for="Job.AppliedDate" disabled class="form-control" />
    </div>
</div>

<div class="form-group row">

    <label asp-for="Job.Location" class="col-sm-1 col-form-label"></label>
    <div class="col-sm-4">
        <input asp-for="Job.Location" disabled class="form-control" placeholder="Company Location or Address" />
    </div>

    <label asp-for="Job.Expectation" class="col-sm-1 col-form-label"></label>
    <div class="col-sm-2">
        <select asp-for="Job.Expectation" asp-items="Html.GetEnumSelectList<Expectation>()"
                disabled class="custom-select mr-sm-2">
            <option value="">Please Select</option>
        </select>
        <span asp-validation-for="Job.Expectation" class="text-danger"></span>
    </div>

    <label asp-for="Job.InterviewDate" class="col-sm-1 col-form-label">Interview</label>
    <div class="col-sm-3">
        <input asp-for="Job.InterviewDate" disabled class="form-control" />
    </div>

</div>

<hr />
<div class="row m-1 justify-content-around">
    <div class="form-check m-1">
        <input asp-for="@Model.Applied" disabled class="form-check-input" />
        <label class="form-check-label" asp-for="@Model.Applied">Applied</label>
    </div>
    <div class="form-check m-1">
        <input asp-for="@Model.Researched" disabled class="form-check-input" />
        <label class="form-check-label" asp-for="@Model.Researched">Researched</label>
    </div>
    <div class="form-check m-1">
        <input asp-for="@Model.FollowUpSent" disabled class="form-check-input" />
        <label class="form-check-label" asp-for="@Model.FollowUpSent">Sent Follow Up Email</label>
    </div>
    <div class="form-check m-1">
        <input asp-for="@Model.Interviewed" disabled class="form-check-input" />
        <label class="form-check-label" asp-for="@Model.Interviewed">Interviewed</label>
    </div>
    <div class="form-check m-1">
        <input asp-for="@Model.FollowUp2Sent" disabled class="form-check-input" />
        <label class="form-check-label" asp-for="@Model.FollowUp2Sent">Sent Follow Up Email</label>
    </div>
    <div class="form-check m-1">
        <input asp-for="@Model.Finished" disabled class="form-check-input" />
        <label class="form-check-label" asp-for="@Model.Finished">Finished</label>
    </div>
</div>

<div asp-validation-summary="All" class="text-danger"></div>
<hr />
<div class="form-group row">
    <div class="col-sm-10">
        <a asp-controller="Home" asp-action="Edit" asp-route-Id="@Model.Job.EncryptedId" class="btn btn-primary btn-sm m-1">Edit</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-danger btn-sm">Cancel</a>
    </div>
</div>

@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}
